@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {
    using (Html.BeginForm("Sair", "Conta", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Olá " + User.Identity.GetUserName() + "!", "Indice", "Gerenciamento", routeValues: null, htmlAttributes: new { title = "Gerenciar" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Sair</a></li>
        </ul>
    }
}
else {
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrar", "Registrar", "Conta", routeValues: null, htmlAttributes: new { id = "registrarLink" })</li>
        <li>@Html.ActionLink("Entrar", "Entrar", "Conta", routeValues: null, htmlAttributes: new { id = "entrarLink" })</li>
    </ul>
}
