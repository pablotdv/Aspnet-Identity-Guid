@model AspNet.Identity.Common.ViewModels.SendCodeViewModel
@{
    ViewBag.Title = "Enviar código de verificação";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("EnviarCodigo", "Conta", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-8">
            Provider de autenticação em duas etapas:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
